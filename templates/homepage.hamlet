<div .ui.container>
    <h1>
      Uploaded Papers

    $if not $ Import.null authorsAndPapers
                <table .table >
                    <tr>
                        <th>
                            Paper
                        <th>
                            Title 
                        <th>
                            Authors 
                        <th>
                            Abstract 
                        <th> 
                            Action
                    $forall (authors, Entity paperId paper) <- authorsAndPapers 
                        <tr>
                            <td>
                                $if isDecisionPhase
                                    <a href=@{ViewReviewR paperId}>
                                        #{paperFilepath paper}
                                $else 
                                    <a href=@{DownloadR paperId}>
                                        #{paperFilepath paper}
                            <td>
                                #{paperTitle paper}
                            <td>
                                $forall (Entity _ authorEntity) <- authors
                                    <p> #{authorAuthor authorEntity}
                            <td>
                                #{paperAbstract paper}
                            <td>
                                <form method="post" action=@{ReadyR paperId}>
                                    $if (paperReady paper)
                                        <input type="submit" value="Mark Not Ready">
                                    $else
                                        <input type="submit" value="Mark Ready">
    $if isDecisionPhase
        <h1>
            Accepted Papers
        $if not $ Import.null acceptedAuthorsAndPapers 
                    <table .table >
                        <tr>
                            <th>
                                Paper
                            <th>
                                Title 
                            <th>
                                Authors 
                            <th>
                                Abstract 
                        $forall (authors, Entity paperId paper) <- acceptedAuthorsAndPapers 
                            <tr>
                                <td>
                                    <a href=@{DownloadR paperId}>
                                        #{paperFilepath paper}
                                <td>
                                    #{paperTitle paper}
                                <td>
                                    $forall (Entity _ authorEntity) <- authors
                                        <p> #{authorAuthor authorEntity}
                                <td>
                                    #{paperAbstract paper}
